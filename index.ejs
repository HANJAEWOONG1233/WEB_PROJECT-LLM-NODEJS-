<!-- views/index.ejs -->
<div class="container">
  <h2>Upload PDF for Translation</h2>
  <% if (typeof error !== 'undefined' && error) { %>
    <p class="error-message"><%= error %></p>
  <% } %>
  <form action="/upload" method="POST" enctype="multipart/form-data">
    <div class="upload-form-container">
      <label for="pdfFile">파일 선택</label> <!-- 버튼처럼 보이게 할 label -->
      <input type="file" id="pdfFile" name="pdfFile" accept="application/pdf" required onchange="displayFileName()">
      <button type="submit">Upload and Translate</button>
    </div>
    <div id="fileNameDisplay">선택된 파일 없음</div> <!-- 선택된 파일명 표시 영역 -->
  </form>
</div>

<script>
  function displayFileName() {
    const input = document.getElementById('pdfFile');
    const display = document.getElementById('fileNameDisplay');
    if (input.files.length > 0) {
      display.textContent = '선택된 파일: ' + input.files[0].name;
    } else {
      display.textContent = '선택된 파일 없음';
    }
  }
</script>